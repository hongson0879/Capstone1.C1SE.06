<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity_sellhouse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="#4baf4f"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_quaylui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="390dp"
            android:background="@null"
            app:srcCompat="@drawable/arrow" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sell House"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@null"
                app:srcCompat="@drawable/sangtrai" />

            <ImageButton
                android:id="@+id/img_btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@drawable/camera" />

            <ImageButton
                android:id="@+id/img_btn_camera1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@drawable/camera" />

            <ImageButton
                android:id="@+id/img_btn_camera2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@drawable/camera" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@null"
                app:srcCompat="@drawable/sangphai" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nhà Trong kiệt hay mặt tiền"
        android:layout_margin="5dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rad_nhamattien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà mặt tiền"
            android:layout_margin="5dp"/>

        <RadioButton
            android:id="@+id/btn_nhatrongkiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà Trong kiệt"
            android:layout_margin="5dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="Loại Nhà" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/rad_bietthu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biệt Thự"
            android:layout_margin="5dp"/>

        <RadioButton
            android:id="@+id/rad_nhacap4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà cấp 4"
            android:layout_margin="5dp"/>

        <RadioButton
            android:id="@+id/rad_nhalau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà lầu"
            android:layout_margin="5dp"/>

    </RadioGroup>

    <EditText
        android:id="@+id/edt_thanhpho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Thành Phố"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/edt_quan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quận or Huyện"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/edt_duong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Đường"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/edt_tien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:text="Giá Tiền"
        android:inputType="number" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="Sell"
        app:backgroundTint="#4baf4f" />

</LinearLayout>